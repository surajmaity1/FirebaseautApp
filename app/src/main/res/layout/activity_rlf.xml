<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.ActivityRLF">

    <TextView
        android:id="@+id/rlf_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_rlf_tt"
        android:text="@string/app_name"
        android:textColor="@color/heading_txt_clr"
        android:textSize="@dimen/rlf_tts"
        android:textStyle="bold" />


    <Button
        android:id="@+id/log_in_btn_rlf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/btn_margin"
        android:layout_marginTop="@dimen/rlf_btn_margin_top"
        android:layout_marginEnd="@dimen/btn_margin"
        android:background="@drawable/customized_button"
        android:gravity="center"
        android:paddingTop="@dimen/btn_padding_top_btm"
        android:paddingBottom="@dimen/btn_padding_top_btm"
        android:text="@string/log_in"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_txt_size"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/sign_up_btn_rlf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/btn_margin"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:layout_marginEnd="@dimen/btn_margin"
        android:background="@drawable/customized_button"
        android:gravity="center"
        android:paddingTop="@dimen/btn_padding_top_btm"
        android:paddingBottom="@dimen/btn_padding_top_btm"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_txt_size"
        app:backgroundTint="@null"/>
    <Button
        android:id="@+id/reset_pwd_btn_rlf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/btn_margin"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:layout_marginEnd="@dimen/btn_margin"
        android:background="@drawable/customized_button"
        android:gravity="center"
        android:paddingTop="@dimen/btn_padding_top_btm"
        android:paddingBottom="@dimen/btn_padding_top_btm"
        android:text="@string/reset_pwd"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_txt_size"
        app:backgroundTint="@null"/>
</LinearLayout>